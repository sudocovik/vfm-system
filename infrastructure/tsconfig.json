{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true
  },
  "files": ["./src/main.ts",
    "./src/local-environment/index.ts"
  ],
  "exclude": ["./node_modules"]
}